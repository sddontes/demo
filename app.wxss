/**app.wxss**/
@import "/style/font.wxss";

page {
    font-family: PingFangSC-Regular, Helvetica Neue, Helvetica, Arial, sans-serif; 
    font-size: 30rpx;
    color: #1C1B21;
}

input, textarea {
    color: #1C1B21;
    min-height: auto;
}
.regular{
  font-family: PingFangSC-Regular;
}
.medium{
  font-family:PingFangSC-Medium;
}
.light{
  font-family: PingFangSC-Light;
}
.ST_light{
  font-family: STHeitiSC-Light;
}
.active{
  color: #ff5e5e !important;
  font-size: 30rpx;
} 

.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.space{
  justify-content: space-between;
  /* align-items: center; */
}
.aic{
  align-items: center;
}
.cell{
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;  
  padding: 32rpx 40rpx;
  position: relative;
  background: #fff;
  color: #3b3b3b;
}

.cell:before {  
  content: " ";  
  position: absolute;  
  bottom: 0;  
  right: 0rpx;  
  left: 40rpx; 
  height: 1px;  
  border-top: 2rpx solid #f1f1f1;  
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5); 
} 
.cell_hd {
  display: block;
  min-width: 160rpx;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  font-size: 30rpx;
}
.cell_cn {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
}
.cell_ft {
  text-align: right;
   line-height: 1; 
  padding-left: 12rpx;
}

/* 用户头像带v */
.user_icon{
  position: relative;
}

/* 10px小字 */
.col74{
  font-family: PingFangSC-Light;
  font-size: 20rpx;
  color: #747474;
}

/* 80px图片 */
.big_img{
  display: block;
  width: 160rpx;
  height: 160rpx;
}
/* 24px小图片，头像 */
.att_user{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: block;
  margin-right: 20rpx;
}


/* 订单部分 */
.orders{
  font-size: 28rpx;
}
.orders .cell:before{
  left: 0;
}
.orders .big_img{
  margin-right: 26rpx;
}
.orders .order_tit{
  font-size: 28rpx;
  width: 328rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #1C1B21;
}
.orders .order_price{
  margin: 16rpx 0 16rpx;
}
.orders .order_type{
  font-family: STHeitiSC-Light;
  font-size: 24rpx;
  color: #848484;
}
.orders .num_color{
  font-family: STHeitiSC-Light;
  color: #848484;
  font-size: 30rpx;
}
.orders .cell .cell_cn{
  color: #848484;
}

/* 购物车底部栏 */
.cart_bot{
  line-height: 98rpx;
  background: #fff;
  font-size: 28rpx;
  position: fixed; 
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  z-index: 4;
}
/* 购物车底部结算按钮 */
.cart_btn{
  width: 286rpx;
  background: #FF5E5E;
  color: #fff;
  text-align: center;
}
.cart_btn.dis{
  background: #ebebeb;
  color: #fff;
}
/* 一物一拍 */
.cart_type{
  padding: 2rpx 10rpx;
  font-size: 18rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
  text-align: center;
  position: relative;
  color: #1C1B21;
  /* overflow: initial; */
}
.cart_type:after{
    content: "  ";
    position: absolute;
    left: 0;
    top: 0;
    z-index:3;
    width: 200%;
    height:200%;
    border:2rpx solid #1C1B21;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scale(.5, .5);
    transform: scale(.5, .5); 
    border-radius: 8rpx;
}
/* 搜索图标 */
.search_bar{
  background: #f5f5f5;
  border-radius: 42rpx;
  height: 76rpx;
  font-size: 24rpx;
}
.search_icon{
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}
.search_bar input{
  height: 100%;
  padding-top: 4rpx;
}

.btn{
  width: 100%;
  line-height: 76rpx;
  background: #ff5e5e;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  border-radius: 38rpx;
}


/* 底部弹框 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 1000;
  /* color: #fff; */
}
.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}

button.share_btn{
display:block;
margin-left:0;
margin-right:0;
padding-left:0;
padding-right:0;
box-sizing:border-box;
font-size:24rpx;
text-align:center;
text-decoration:none;
line-height:initial;
border-radius:5px;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#848484;
background-color:#fff;
}
button.share_btn:after{
  border: none;
}


.share_back{
  width: 166rpx;
  height: 76rpx;
  position: fixed;
  left: 0;
  bottom: 153rpx;
  z-index: 3;
}


