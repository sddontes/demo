@import "../../../wxParse/wxParse.wxss";
@import "/style/page.wxss";
.container{
  padding: 12rpx 40rpx 120rpx;
}
.main_content{
  font-size: 34rpx;
  line-height: 60rpx;
}
.main_content image{
  width: 100%;
  height: 416rpx;
  margin: 28rpx 0;
}
.arc_user image{
  margin-bottom: 0;
  /* margin-right: 36rpx; */
}
.arc_user{
  padding: 28rpx 0;
}
.arc_tit{
  font-size: 40rpx;
  font-family: Seminbold;
  line-height: 52rpx;
}
.tit_fixed{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 22rpx 40rpx;
  background: #fff;
  z-index: 2;
}
.fixed_con{
  margin-top: 170rpx;
}
.v_icon{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 26rpx;
  left: 30rpx;
}
.atten_icon{
  width: 120rpx;
  line-height: 52rpx;
  background: #ff5142;
  color: #fff;
  text-align: center;
  border-radius: 42rpx;
}
.atten_icon.atten_avtive{
  border: 1px solid #f1f1f1;
  color: #898989;
  background: #fff;
}
.comment_bar{
  position: fixed;
  bottom: 0;
  height: 98rpx;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 2rpx solid #f1f1f1;
}
.comment_txt{
  margin: 0 40rpx 0 40rpx;
  line-height: 60rpx;
  background: #f6f6f6;
  width: 394rpx;
  border-radius: 60rpx;
  font-size: 24rpx;
  padding-left: 32rpx;
  color: #979797;
}
.comment_bar .comment_icon{
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin:0 28rpx 0 0;
}
.read_icon{
  width: 108rpx;
  height: 108rpx;
  display: block;
  margin: 40rpx auto 20rpx;
}
.read_content .col74{
  margin-bottom: 40rpx;
}
.main_comment{
  font-size: 28rpx;
  padding-top: 40rpx;
  /* border-top: 1px solid #f1f1f1; */
}
.main_comment .comment_user{
  color: #747474;
}
.main_comment .comment_tips{
  padding-left: 68rpx;
  margin: 20rpx 0;
}
.main_comment .comment_time{
  font-size: 20rpx;
  margin-left: 68rpx;
}
.comment_item{
  margin-bottom: 40rpx;
}
.com_reply{
  color: #4A90E2;
  margin-left: 30rpx;
}
.all_comments{
  font-size: 34rpx;
  color: #747474;
  font-family: Seminbold;
  margin-bottom: 40rpx;
}
.comment_zan{
  width: 504rpx;
  margin: 30rpx auto 0;
  flex-wrap: wrap;
}
.zan_icon{
  margin-bottom: 12rpx;
}
.zan_like{
  width: 504rpx;
  margin: 0 auto;
  text-align: center;
  position: relative;
  color: #747474;
}
.zan_like::before{
  content: " ";  
  position: absolute;  
  top: 20rpx;  
  left: 0rpx; 
  width: 168rpx;
  height: 1px;  
  background: #f1f1f1; 
}
.zan_like::after{
  content: " ";  
  position: absolute;  
  top: 20rpx;  
  width: 168rpx;
  right: 0rpx;  
  height: 1px; 
  background: #f1f1f1; 

}
.handle_zan{
  text-align: center;
  margin-bottom: 60rpx;
}
.arc_zan_icon{
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 30rpx auto 16rpx;
}

.comment_bar button{
display:block;
margin-left:0;
margin-right:0;
padding-left:0;
padding-right:0;
box-sizing:border-box;
font-size:24rpx;
text-align:center;
text-decoration:none;
line-height:initial;
border-radius:5px;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#848484;
background-color:#fff;
}
.comment_bar button:after{
  border: none;
}