@import "/style/page.wxss";
.container{
  padding: 38rpx 0;
}
.header_icon{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 1px solid #f5f5f5;
  position: relative;
  margin-left: 40rpx;
}
.header_name{
  font-size: 36rpx;
  color: #1C1B21;
  margin-left: 30rpx;
  align-self: center;
}
.v_icon{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  bottom: -8rpx;
  right: 0;
}
.center_nav{
  padding: 32rpx 104rpx 50rpx;
  text-align: center;
  color: #1C1B21;
}
.nav_item{
  font-size: 26rpx;
  margin-top: 12rpx;
}
.blank_bar{
  width: 100%;
  height: 20rpx;
  background: #f9f9f9;
}
.attention_btn{
  margin-right: 40rpx;
  align-self: center;
  width: 120rpx;
  line-height: 52rpx;
  background: #FF5142;
  color: #fff;
  text-align: center;
  border-radius: 26rpx;
}
.attention_btn.atten_avtive{
  background: #f6f6f6;
  color: #888;
}
.index_header_name{
  color: #222;
}
.main_content{
  padding-top: 40rpx;
}


