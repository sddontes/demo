.container{
  padding:40rpx;
}
.container textarea{
  width: 100%;
  padding: 0 0 40rpx;
  height: 180rpx;
}
.uploadBox{
  padding:0 0 20rpx;
  flex-wrap: wrap;
}
.uploadBox .upload_item,.upload_img{
  width: 210rpx;
  height: 210rpx;
  background: #f4f4f4;
  text-align: center;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.uploadBox .upload_item:nth-child(3n){
  margin-right: 0;
}
.uploadBox .upload_item{
  position: relative;
}
.uploadBox .upload_bg{
  position: absolute;
  left: 0;
  right: 0;
  /* top: 0; */
  bottom: 0;
  background: rgba(255,255,255,.7);
}
.uploadBox .upload_del{
  width: 48rpx;
  height: 48rpx;
  line-height: 44rpx;
  font-size: 30rpx;
  background: #000;
  border-radius: 50%;
  color: #fff;
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  z-index: 2;
}
.uploadBox .upload_txt{
  position: absolute;
  top: 66rpx;
  width: 100%;
  /* color: #fff; */
}
/* .uploadBox .upload_txt.txt_fail{
  color: #000;
} */
.uploadBox .add_box{
  color: #979797;
}
.uploadBox .add_icon{
  width: 40rpx;
  height: 40rpx;
  margin: 60rpx auto 18rpx;
}
.pic_cell.cell{
  padding: 32rpx 0;
  margin-bottom: 32rpx;
}
.cell::before{
  left: 0;
}
.local_icon{
  display: block;
  width: 24rpx;
  height: 34rpx;
  margin-right: 18rpx;
  margin-left: 8rpx;
}
.tag_item{
  height: 54rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  margin: 44rpx 20rpx 112rpx 0;
  position: relative;
  color: #979797;
}
.tag_item:after{
    content: "  ";
    position: absolute;
    left: 0;
    top: 0;
    z-index:-1;
    width: 200%;
    height:200%;
    border:2rpx solid #979797;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scale(.5, .5);
    transform: scale(.5, .5); 
    border-radius: 200rpx;
}
.tag_item.active_tag{
  background: #ff5e5e;
  color: #fff;
  border-radius: 200rpx;
}
.tag_item.active_tag:after{
  border: none;
}
