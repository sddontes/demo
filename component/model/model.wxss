.wx-popup {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 1000;
}

.popup-container {
  position: absolute;
  left: 50%;
  top: 40%;
  width: 80%;
  max-width: 500rpx;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
  font-size: 32rpx;
}

.wx-popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 40rpx;
  border-bottom: 2rpx solid red;
}

.wx-popup-con {
  padding: 40rpx 0;
  text-align: center;
  position: relative;
  color: #000;
}
.wx-popup-con:before {  
  content: " ";  
  position: absolute;  
  bottom: 0;  
  right: 0rpx;  
  left: 0rpx; 
  height: 1px;  
  border-top: 2rpx solid #ccc;  
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5); 
}

.wx-popup-btn {
  display: flex;
  justify-content: space-around;
}
 
.wx-popup-btn text {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
}
.wx-popup-btn text:nth-child(2){
  color: #ff5e5e;
  position: relative;
}
.wx-popup-btn text:nth-child(2):before {  
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    height: 100%;
    border-left: 1px solid #ccc;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleX(.5);
    transform: scaleX(.5);
}